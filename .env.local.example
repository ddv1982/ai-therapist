# Clerk Authentication (required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_YOUR_KEY_HERE"
CLERK_SECRET_KEY="sk_test_YOUR_KEY_HERE"
CLERK_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET_HERE"

# Get these from:
# 1. Create account at https://dashboard.clerk.com
# 2. Create application
# 3. Copy keys from API Keys section
# 4. Set up webhook: https://your-domain.com/api/webhooks/clerk
#    Subscribe to: user.created, user.updated, user.deleted

# Core application secrets
ENCRYPTION_KEY="generate-a-32-byte-base64-key-with-openssl-rand-base64-32"

# Generate secrets with:
# openssl rand -base64 32  (for ENCRYPTION_KEY - 32 bytes base64)
# npm run encryption:setup  (auto-generate and save ENCRYPTION_KEY)

# Convex Backend (required)
CONVEX_URL="http://127.0.0.1:6790/?d=anonymous-ai-therapist"
NEXT_PUBLIC_CONVEX_URL="http://127.0.0.1:6790/?d=anonymous-ai-therapist"

# AI Provider Configuration (required)
GROQ_API_KEY=""

# Local AI defaults
OLLAMA_BASE_URL="http://127.0.0.1:11434"
OLLAMA_MODEL_ID="gemma3:4b"

# Rate limiting
RATE_LIMIT_DISABLED="false"
RATE_LIMIT_USE_REDIS="false"
RATE_LIMIT_BLOCK_MS="300000"
RATE_LIMIT_WINDOW_MS="300000"
RATE_LIMIT_MAX_REQS="50"
CHAT_WINDOW_MS="300000"
CHAT_MAX_REQS="120"
CHAT_MAX_CONCURRENCY="2"
CHAT_CLEANUP_INTERVAL_MS="30000"
CHAT_RESPONSE_MAX_CHARS="100000"
CHAT_INPUT_MAX_BYTES="131072"
API_WINDOW_MS="300000"
API_MAX_REQS="300"

# Cache configuration (Redis-backed)
CACHE_ENABLED="true"
CACHE_DEFAULT_TTL="300"
CACHE_SESSION_TTL="1800"
CACHE_MESSAGE_TTL="900"
MESSAGES_CACHE_ENABLED="true"

# Redis connection (required for caching)
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Observability and metrics
LOG_LEVEL="info"
ENABLE_METRICS_ENDPOINT="false"
AI_TELEMETRY_ENABLED="false"
AI_TELEMETRY_RECORD_INPUTS="true"
AI_TELEMETRY_RECORD_OUTPUTS="true"
AI_TELEMETRY_FUNCTION_ID=""
AI_TELEMETRY_APPLICATION=""

# Security flags
BYPASS_AUTH="false"
NEXT_PUBLIC_MARKDOWN_ALLOW_HTTP="false"
NEXT_PUBLIC_MARKDOWN_ALLOW_MAILTO="false"

# Server
PORT="4000"
