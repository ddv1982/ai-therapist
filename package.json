{
  "name": "therapist-ai-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev --turbo --port 4000",
    "dev:local": "next dev --turbo --hostname 127.0.0.1 --port 4000",
    "build": "next build",
    "start": "next start --hostname 0.0.0.0 --port 4000",
    "start:local": "next start --hostname localhost --port 4000",
    "lint": "eslint .",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "api:types": "openapi-typescript docs/api.yaml -o src/types/api.generated.ts",
    "encryption:generate": "node scripts/setup-encryption.js generate",
    "encryption:setup": "node scripts/setup-encryption.js setup",
    "encryption:validate": "node scripts/setup-encryption.js validate",
    "env:init": "node scripts/setup-env-local.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --ci",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "qa:smoke": "npm run api:types && npm run lint && tsc --noEmit && npm test",
    "qa:full": "CI=1 npm run qa:smoke && CI=1 npm run test:coverage && CI=1 npm run test:e2e",
    "audit:names": "node scripts/naming-audit.mjs"
  },
