{
  "name": "therapist-ai-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "next dev --turbo --port 4000",
    "dev:local": "next dev --turbo --hostname localhost --port 4000",
    "build": "next build",
    "start": "next start --hostname 0.0.0.0 --port 4000",
    "start:local": "next start --hostname localhost --port 4000",
    "lint": "eslint .",
    "knip": "knip",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "reports:backfill-user-ids": "convex run reports:_backfillReportUserIds",
    "api:types": "openapi-typescript docs/api.yaml -o src/types/api.generated.ts",
    "encryption:generate": "bun scripts/encryption-generate.ts",
    "encryption:setup": "bun scripts/encryption-setup.ts",
    "env:init": "bun scripts/setup-env-local.ts",
    "env:check": "bun scripts/check-env-parity.ts",
    "i18n:types": "bun scripts/generate-i18n-types.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "baseline:update": "bun add -d baseline-browser-mapping@latest",
    "ci:check": "eslint . && tsc --noEmit && prettier --check . && jest",
    "qa:smoke": "openapi-typescript docs/api.yaml -o src/types/api.generated.ts && eslint . && tsc --noEmit && jest",
    "qa:full": "CI=1 openapi-typescript docs/api.yaml -o src/types/api.generated.ts && CI=1 eslint . && CI=1 tsc --noEmit && CI=1 jest --coverage && playwright install --with-deps || true && CI=1 playwright test && bun scripts/print-coverage-summary.ts",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "ANALYZE=true BUNDLE_ANALYZE=server next build",
    "analyze:browser": "ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "prepare": "husky"
  },
  "browserslist": {
    "production": [
      "baseline widely available on 2025-12-01"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ai-sdk/groq": "^3.0.19",
    "@ai-sdk/openai": "^3.0.23",
    "@ai-sdk/provider": "^3.0.6",
    "@ai-sdk/provider-utils": "^4.0.11",
    "@ai-sdk/react": "^3.0.64",
    "@ai-sdk/rsc": "^2.0.62",
    "@clerk/nextjs": "^6.37.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-virtual": "^3.13.18",
    "ai": "^6.0.62",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "1.31.7",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.29.2",
    "katex": "^0.16.28",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.1",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.4",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "streamdown": "^2.1.0",
    "svix": "^1.84.1",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "autoprefixer": "^10.4.24",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-perf": "^3.3.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "knip": "^5.83.0",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "web-streams-polyfill": "^4.2.0"
  },
  "overrides": {
    "baseline-browser-mapping": "^2.9.19"
  }
}
