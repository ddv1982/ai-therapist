{
  "name": "therapist-ai-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "next dev --turbo --port 4000",
    "dev:local": "next dev --turbo --hostname localhost --port 4000",
    "build": "next build",
    "start": "next start --hostname 0.0.0.0 --port 4000",
    "start:local": "next start --hostname localhost --port 4000",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "api:types": "openapi-typescript docs/api.yaml -o src/types/api.generated.ts",
    "encryption:generate": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\"",
    "env:init": "node scripts/setup-env-local.js",
    "i18n:types": "node scripts/generate-i18n-types.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "qa:smoke": "openapi-typescript docs/api.yaml -o src/types/api.generated.ts && eslint . && tsc --noEmit && jest",
    "qa:full": "CI=1 openapi-typescript docs/api.yaml -o src/types/api.generated.ts && CI=1 eslint . && CI=1 tsc --noEmit && CI=1 jest --coverage && playwright install --with-deps || true && CI=1 playwright test && node scripts/print-coverage-summary.mjs",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "ANALYZE=true BUNDLE_ANALYZE=server next build",
    "analyze:browser": "ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.33",
    "@ai-sdk/openai": "^2.0.88",
    "@ai-sdk/react": "^2.0.117",
    "@ai-sdk/rsc": "^1.0.117",
    "@clerk/nextjs": "^6.36.5",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.13",
    "ai": "^5.0.115",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.31.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.548.0",
    "next": "^16.1.0",
    "next-intl": "^4.6.1",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "recharts": "^3.6.0",
    "sonner": "^2.0.7",
    "streamdown": "^1.6.10",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.0",
    "@playwright/test": "^1.57.0",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "web-streams-polyfill": "^4.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ],
    "convex/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
