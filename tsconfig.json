{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    
    // Enhanced strict mode settings for better type safety
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false, // Allow dynamic property access for compatibility
    "noUncheckedIndexedAccess": false, // Disable for compatibility with existing code
    "exactOptionalPropertyTypes": false, // Disable for compatibility with existing code
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false, // Disable for development, enable in CI
    "noUnusedParameters": false, // Disable for development, enable in CI
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "__tests__/**/*", "e2e/**/*"]
}